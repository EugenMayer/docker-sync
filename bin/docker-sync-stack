#!/usr/bin/env ruby
file = File.symlink?(__FILE__) ? File.readlink(__FILE__) : __FILE__
file = File.dirname(file)
$LOAD_PATH.unshift File.expand_path('../../lib', file)


require 'thor'
require 'docker-sync/update_check'

